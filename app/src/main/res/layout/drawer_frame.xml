<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="10"
           android:background="@drawable/nav_header_bg">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/iv_header_prof"
               android:layout_width="@dimen/prof_image_size"
               android:layout_height="@dimen/prof_image_size"
               android:src="@drawable/profile_pic"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/tv_user_name"
                android:text="Deep Amin"
                android:textSize="@dimen/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_below="@+id/iv_header_prof"
                android:layout_alignLeft="@+id/iv_header_prof"
                android:layout_alignStart="@+id/iv_header_prof" />
       </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
    <ExpandableListView
        android:id="@+id/elv_drawer_menu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/rv_drawer_menu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    -->
    </LinearLayout>
</LinearLayout>